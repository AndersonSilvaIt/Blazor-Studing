@page "/counter"


<body style="background-color:@CorDeFundo">

    <p style="font-size:@TamanhoFonte">Counter</p>

    <p role="status">Current count: @currentCount</p>

    <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
</body>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}

@code {

    [CascadingParameter(Name = nameof(CorDeFundo))] string CorDeFundo { get; set; }
    [CascadingParameter(Name = nameof(TamanhoFonte))] string TamanhoFonte { get; set; }

}